<h1>Post#edit</h1>

<% if @posts.errors.any? %>
  <% @posts.errors.full_message.each do | post| %>
    <p>
      <%= error %>
    </p>
  <% end %>
<% end %>

<%= form_for @posts, url:"/post/#{@post.id}", method:"put" do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :body %>
  <%= f.text_field :body %>
  <%= f.label :category %>
  <%= f.text_field :categoty %>
  <%= f.submit %>
<% end %>
<p>

<%= link_to "Delete this post", "/post/#{@post.id}", method:"delete", data: {confirm: 'Are you sure?'} %>
</p>
<p>
  <%= link_to"Back", :back %>
</p>