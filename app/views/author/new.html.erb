<h1>Author#new</h1>
<p>Find me in app/views/author/new.html.erb</p>

<!--  Grab the error messages  -->
<% if @authors.errors.any? %>
  <% @authors.errors.full_messages.each do |error|  %>
  <p>
  <%= error %>
  </p>
  <% end %>
<% end %>

<%= form_for @authors, url:"/author" do |f| %>
  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, :autofocus=>true %>
  </p>
  <p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :age %>
    <%= f.text_field :age %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<p>
  <%= link_to"Back", :back %>
</p>
